<div class="big_wrapper">
  <div class="wrapper center" id="middle_reserve">

      <h3>Subscribe now</h3>
      <p>
        To get early access, subscribe to the latest updates!
        <br />
        <br />
        <% if Settings.use_payment_options %>
          Select a payment option and enter your email address below.
        <% else %>
          Enter your email address below.
        <% end %>
      </p>

      <%= form_tag "/preorder/prefill", :id => "checkout" do %>
        <%= render 'preorder/payment_options' %>
            <%= email_field_tag "email", nil, :placeholder => "Email address", :required => "required", :id => "email", :class => "main_content" %>
			<%= submit_tag Settings.call_to_action, :class => "blue_button reserve" %>

        <%= like_button %>
      <% end %>
  </div>
</div>
